{% extends 'base.html.twig' %}

{% block title %}PROSMOBILE{% endblock %}

{% block body %}
<div class="">
    <h1>Votre panier</h1>

    {% if panier is empty %}
        <p>Votre panier est vide</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Article</th>
                    <th>HTT</th>
                    <th>TTC</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
             {% for item in panier %}
                 <tr>
                     <td>{{ item.article.nom }}</td>
                     <td>{{ item.article.prixHT }}</td>
                     <td>{{ item.article.prixTTC }}</td>
                     <td>{{ item.quantity }}</td>
                     <td>{{ item.article.prixTTC * item.quantity }}</td>
                     <td>
                        <div class="row">
                            <a href="{{ path('panier_add', {'id': item.article.id}) }}" class="btn btn-success btn-sm mr-1">
                                <i class="fas fa-plus"></i>
                            </a>
                            <a href="{{ path('panier_delete', {'id': item.article.id}) }}" class="btn btn-danger btn-sm mr-1">
                                <i class="fas fa-trash"></i>
                            </a> 
                        </div>
                     </td>
                 </tr>
             {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right">Total :</td>
                    <td> {{ total }}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    {% endif %}

</div>
{% endblock %}
{% block footer %}
    <footer>
    <div class="text-right">
        <button class="btn btn-success">Checkout</button>
    </div>
    </footer>
{% endblock %}