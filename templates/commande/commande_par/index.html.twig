{% extends 'base.html.twig' %}

{% block title %}PROSMOBILE{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				<a href="{{ path('home') }}">
					Accueil
				</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('particulier_profile', {'id' : app.user.id}) }}">
					Mon profil
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				Mes commandes
			</li>
		</ol>
	</nav>
	{# title #}
	<h1 class="text-center">Mes commandes</h1>
	{# body #}
	<table class="table mt-4">
		<thead class="thead-dark">
			<tr>
				<th>Id</th>
				<th>ClientID</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for commande_par in commande_pars %}
				<tr>
					<td>{{ commande_par.id }}</td>
					<td>{{ commande_par.particulier.id }}</td>
					<td>
					<div class="row">
					<div title="Afficher">
						<a href="{{ path('commande_show', {'id': commande_par.id}) }}">
							<i data-fa-symbol="show" class="fas fa-eye text-secondary"></i>
							<svg class="icon-md">
								<use xlink:href="#show"></use>
							</svg>
						</a>
						</div>
						<div>
							{{ include('commande/commande_par/_delete_form.html.twig') }}
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">Aucune commande trouv√©e</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
