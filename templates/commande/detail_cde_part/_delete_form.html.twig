<form method="post" action="{{ path('commande_detail_del', {'id': detail.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ detail.id) }}">
	<button class="delete-button-sm" title="Supprimer">
		<i data-fa-symbol="remove" class="fas fa-trash"></i>
		<svg class="icon-sm">
			<use xlink:href="#remove"></use>
		</svg>
	</button>
</form>
