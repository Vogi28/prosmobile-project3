{% extends 'base.html.twig' %}

{% block title %}Particulier index{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_index') }}">
					Dashboard
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				Comptes particuliers
			</li>
		</ol>
	</nav>
	{# title #}
	<h1 class="text-center">Comptes particuliers</h1>
	{# body #}
	<table class="table mt-4">
		<thead class="thead-dark">
			<tr>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Adresse</th>
				<th>Code Postal</th>
				<th>Ville</th>
				<th>Téléphone</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for particulier in particuliers %}
				<tr>
					<td>{{ particulier.prenom }}</td>
					<td>{{ particulier.nom }}</td>
					<td>{{ particulier.adresse }}</td>
					<td>{{ particulier.codePostal }}</td>
					<td>{{ particulier.ville }}</td>
					<td>{{ particulier.telephone }}</td>
					<td>
						<div>
							<a href="{{ path('particulier_edit', {'id': particulier.id}) }}" title="Modifier">
								<i data-fa-symbol="edit" class="fas fa-pen text-secondary"></i>
								<svg class="icon-md">
									<use xlink:href="#edit"></use>
								</svg>
							</a>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Aucune données</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
