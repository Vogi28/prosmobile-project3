{% extends 'base.html.twig' %}

{% block title %}PROSmobile{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			{% if is_granted('ROLE_ADMIN') %}
				<li class="breadcrumb-item">
					<a href="{{ path('admin_index') }}">
						Dashboard
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('particulier_index') }}">
						Comptes particuliers
					</a>
				</li>
			{% else %}
				<li class="breadcrumb-item">
					<a href="{{ path('home') }}">
						Accueil
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('particulier_profile', { 'id' : app.user.id }) }}">
						Mon profil
					</a>
				</li>
			{% endif %}
			<li class="breadcrumb-item active" aria-current="page">
				Modifier le profil
			</li>
		</ol>
	</nav>
	{# title #}
	<h1>Modification des informations</h1>
	{# include individual form #}
	<div class="container">
		<div class="row d-flex justify-content-center">
			{{ include('profile/particulier/_form.html.twig') }}
		</div>
	</div>
	{# admin part #}
	{% if is_granted('ROLE_ADMIN') %}
		{# include delete button #}
		<div class="container mt-3">
			<div class="row d-flex justify-content-center">
				{{ include('profile/particulier/_delete_form.html.twig') }}
			</div>
		</div>
	{% endif %}
{% endblock %}
