{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{% if user.particulier is null %}
    <h1>Hello {{ user.email }}! ✅</h1>
{% else %}
    <h1>Hello! ✅</h1>
{% endif %}

</div>
<div class="container-full">
    <div class="row">
        <div class="col">
            <nav>
                <ul>
                {% if user.particulier is null %}
                    <li><a href="{{ path('particulier_informations', {'id': user.id}) }}">Informations</a></li>
                {% else %}
                    <li><a href="{{ path('particulier_edit', {'id': user.particulier.id}) }}">Mise a jour des informations</a></li>
                    <li><a href="{{ path('changer_mdp', {'id': user.id}) }}">Changer mot de passe</a></li>
                    <li><a href="{{ path('commande_index') }}">Commandes</a></li>
                    <li><a href="#">Rendez-vous</a></li>
                {% endif %}
                </ul>
            </nav>
        </div>
        {% if user.particulier is not null %}
        <div class="col">
            <p> {{ user.particulier.prenom }}</p>
            <p> {{ user.particulier.nom }}</p>
            <p> {{ user.particulier.adresse }}</p>
            <p> {{ user.particulier.codePostal }} {{ user.particulier.ville }}</p>
            <p> {{ user.particulier.telephone }}</p>
            <p> {{ user.email }}</p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
