<form method="post" action="{{ path('admin_user_delete', {'id': pro.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pro.user.id) }}">
    <button class="btn" style="border:1px solid black;">Delete</button>
</form>
