{% extends 'base.html.twig' %}

{% block title %}Edit Pro{% endblock %}

{% block body %}
    <h1>Edit Pro</h1>

    <p>{{ include('pro/_form.html.twig', {'button_label': 'Update'}) }}</p>

    {% if is_granted('ROLE_ADMIN') %}

        <p>{{ include('pro/_delete_form.html.twig') }}</p>

        <a href="{{ path('pro_index') }}" class="text-center">back to list</a>
    {% elseif is_granted('ROLE_PRO') %}
        <a href="{{ path('pro_profile', { 'id' : app.user.id }) }}" class="text-center">back to list</a>
    {% endif %}
{% endblock %}
