{# form #}
{{ form_start(form) }}
<div class="container mt-5">
	<div class="d-flex justify-content-center custom-form">
		{# first column #}
		<div class="col">
			{{ form_row(form.prenom, { 'label': 'Prénom' }) }}
			{{ form_row(form.nom) }}
			{{ form_row(form.telephone, { 'label': 'Téléphone' }) }}
			{{ form_row(form.societe, { 'label': 'Société' }) }}
			{{ form_row(form.siret) }}
		</div>
		{# second column #}
		<div class="col">
			{{ form_start(form) }}
			{{ form_row(form.adresse) }}
			{{ form_row(form.codePostal) }}
			{{ form_row(form.ville) }}
			{% if is_granted('ROLE_ADMIN') %}
				{{ form_row(form.pourcentRemise, { 'label': 'Pourcentage remise permanente' }) }}
			{% endif %}
			{{ form_end(form) }}
		</div>
	</div>
	{# button #}
	<div class="d-flex justify-content-center mt-5 mb-3">
		{# save button #}
		<div>
			<button class="save-button" title="Enregistrer">
				<i data-fa-symbol="save" class="fas fa-save"></i>
				<svg class="icon-md">
					<use xlink:href="#save"></use>
				</svg>
			</button>
		</div>
	</div>
</div>

