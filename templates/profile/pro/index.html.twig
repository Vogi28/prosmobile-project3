{% extends 'base.html.twig' %}

{% block title %}Pro index{% endblock %}

{% block body %}
    <h1>Pro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Societe</th>
                <th>Siret</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pro in pros %}
            <tr>
                <td>{{ pro.prenom }}</td>
                <td>{{ pro.nom }}</td>
                <td>{{ pro.societe }}</td>
                <td>{{ pro.siret }}</td>
                <td>{{ pro.adresse }}</td>
                <td>{{ pro.codePostal }}</td>
                <td>{{ pro.ville }}</td>
                <td>{{ pro.telephone }}</td>
                <td>
                    <a href="{{ path('pro_show', {'id': pro.id}) }}">show</a>
                    {# <a href="{{ path('pro_edit', {'id': pro.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('admin_index') }}">Back to menu</a>
{% endblock %}
