{% extends 'base.html.twig' %}

{% block title %}Pro{% endblock %}

{% block body %}
<!-- tree -->
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_index') }}">
					Dashboard
				</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('pro_index') }}">
					Index pro
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				Profile
			</li>
		</ol>
	</nav>

    <h1>Pro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pro.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ pro.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pro.nom }}</td>
            </tr>
            <tr>
                <th>Societe</th>
                <td>{{ pro.societe }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ pro.siret }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ pro.adresse }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ pro.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ pro.ville }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ pro.telephone }}</td>
            </tr>
        </tbody>
    </table>
    <p><a href="{{ path('pro_edit', {'id': pro.id}) }}">edit</a></p>
    {% if is_granted('ROLE_ADMIN') %}
        <p>{{ include('profile/pro/_delete_form.html.twig') }}</p>
    {% endif %}

{% endblock %}
