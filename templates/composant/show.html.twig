{% extends 'base.html.twig' %}

{% block title %}Composant
{% endblock %}

{% block body %}
	<h1>Composant</h1>
	<div class="container">
		<div class="row">
			{% if composant is defined %}
				<div class="card mb-3" style="max-width: 540px;">
					<div class="row no-gutters">
						<div class="col-md-4">
							<img src="https://via.placeholder.com/150x200.png" class="card-img" alt="...">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">{{ composant.nom }}</h5>
								<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
								<p class="card-text">
									<small class="text-muted">{{ composant.prix }}
										€</small>
								</p>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				Aucun composant trouvé.
			{% endif %}
		</div>
	</div>
	<div>
		<a href="{{ path('composant_index') }}">Retour</a>
	</div>
{% endblock %}
