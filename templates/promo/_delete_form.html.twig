<form method="post" action="{{ path('promo_delete', {'id': promo.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette promotion?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promo.id) }}">
	<button class="btn" title="Supprimer">
		<i data-fa-symbol="remove" class="fas fa-trash text-secondary"></i>
		<svg class="icon">
			<use xlink:href="#remove"></use>
		</svg>
	</button>
</form>
