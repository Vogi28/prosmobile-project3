{# form #}
{{ form_start(form) }}
<div class="container my-5">
	<div class="row d-flex justify-content-center">
		<div class="mx-3">
			{{ form_row(form.nom) }}
			{{ form_row(form.photo) }}
			{{ form_row(form.pourcentage) }}
		</div>
		<div class="mx-3">
			{{ form_row(form.debut) }}
			{{ form_row(form.fin) }}
		</div>
	</div>
</div>
{# buttons #}
<div class="container">
	<div class="row d-flex justify-content-center">
		{# save button #}
		<div>
			<button class="save-button" title="Enregistrer">
				<i data-fa-symbol="save" class="fas fa-save"></i>
				<svg class="icon-md">
					<use xlink:href="#save"></use>
				</svg>
			</button>
		</div>
	</div>
</div>
{{ form_end(form) }}
