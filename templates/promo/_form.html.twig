{{ form_start(form) }}
<div class="container mt-4">
	<div class="row">
		<div class="col-lg">
			<div class="d-flex flex-column mt-2">
				{{ form_label(form.nom, 'Titre de la promotion') }}
				{{ form_widget(form.nom) }}
			</div>
			<div class="d-flex flex-column mt-2">
				{{ form_label(form.photo, 'Photo') }}
				{{ form_widget(form.photo) }}
			</div>
		</div>
		<div class="col-lg">
			<div class="d-flex flex-column mt-2">
				{{ form_label(form.debut, 'Date de d√©but de la promotion') }}
				{{ form_widget(form.debut) }}
			</div>
			<div class="d-flex flex-column mt-2">
				{{ form_label(form.fin, 'Date de fin de la promotion') }}
				{{ form_widget(form.fin) }}
			</div>
			<div class="d-flex flex-column mt-2">
				{{ form_label(form.pourcentage, 'Remise') }}
				{{ form_widget(form.pourcentage) }}
