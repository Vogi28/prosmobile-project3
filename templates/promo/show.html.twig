{% extends 'base.html.twig' %}

{% block title %}Promo{% endblock %}

{% block body %}
    <h1>Promo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promo.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ promo.nom }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ promo.photo }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ promo.debut ? promo.debut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ promo.fin ? promo.fin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pourcentage</th>
                <td>{{ promo.pourcentage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('promo_index') }}">back to list</a>

    <a href="{{ path('promo_edit', {'id': promo.id}) }}">edit</a>

    {{ include('promo/_delete_form.html.twig') }}
{% endblock %}
