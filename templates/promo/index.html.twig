{% extends 'base.html.twig' %}

{% block title %}PROSMobile - Liste des promotions{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_index') }}">
					Dashboard
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				Gestion des promotions
			</li>
		</ol>
	</nav>
	{# body #}
	<h1 class="text-center">Liste des promotions</h1>
	{# add button #}
	<div class="container-fluid mt-4">
		<div class="row">
			<a class="btn" href="{{ path('promo_new') }}" title="Ajouter">
				<i data-fa-symbol="add" class="fas fa-plus text-secondary"></i>
				<svg class="icon">
					<use xlink:href="#add"></use>
				</svg>
			</a>
		</div>
	</div>
	{# discount list #}
	<div class="container mt-4">
		<div class="row">
			{% for promo in promos %}
				{% if promo.photo is empty %}
					{% set photo ='https://via.placeholder.com/800x200' %}
				{% else %}
					{% set photo = promo.photo %}
				{% endif %}
				<div class="col-12">
					<div class="media mt-2">
						<img src="{{ photo }}" class="align-self-start mr-4 img-thumbnail" style="width:800px; height:200px;" alt="...">
						<div class="media-body">
							<h5 class="mt-2">{{ promo.nom }}</h5>
							<p class="mt-4">
								du
								{{ promo.debut ? promo.debut|date('d/m/Y') : '' }}
								jusqu'au
								{{ promo.fin ? promo.fin|date('d/m/Y') : '' }}
							</p>
							<p class="mt-2">
								{{ promo.pourcentage }}
								%
							</p>
							{# edit button #}
							<div class="mt-4">
								<a href="{{ path('promo_edit', {'id': promo.id}) }}" title="Modifier">
									<i data-fa-symbol="edit" class="fas fa-pen text-secondary"></i>
									<svg class="icon">
										<use xlink:href="#edit"></use>
									</svg>
								</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				{# empty #}
				<div class="">
					Pas de promos trouv√©es
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
