{% extends 'base.html.twig' %}

{% block title %}PROSMobile - Accueil{% endblock %}

{% block body %}
	{# home #}
	<div class="container-fluid my-5">
		<div class="row">
			{% for promo in promos %}
				{# message #}
				{% if promo is defined and not null %}
					<div class="col">
						<div class="alert alert-info alert-dismissible fade show discount-message" role="alert">
							{{ promo.nom }}
							<strong>
								: Remise de
								{{ promo.pourcentage }}
								% sur les articles.
							</strong>
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true" class="message-close-button">&times;</span>
							</button>
						</div>
					</div>
					{% else %}
					{# #}
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
