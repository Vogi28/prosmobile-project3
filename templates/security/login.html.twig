{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				<a href="{{ path('home') }}">
					Accueil
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				Se connecter
			</li>
		</ol>
	</nav>
	{# login #}
	<div class="container my-5">
		<div class="d-flex justify-content-center custom-form">
			<form method="post">
				{# error #}
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				{# logged in as #}
				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('logout') }}">
							Se d√©connecter
						</a>
					</div>
				{% endif %}
				{# login info #}
				<div>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Entrez votre email" class="form-control" required autofocus>
				</div>
				<div>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" placeholder="Entrez votre mot de passe" class="form-control" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
				{# login button #}
				<div class="d-flex justify-content-center">
					<button class="login-button my-5" type="submit">
						Connexion
					</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
