{% extends 'base.html.twig' %}

{% block title %}PROSmobile - Articles{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				{# administrator part #}
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('admin_index') }}">
						Dashboard
					</a>
				{% else %}
					<a href="{{ path('home') }}">
						Accueil
					</a>
				{% endif %}
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('article_sell_phone_brands') }}">
					Téléphones
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				{{ brand }}
			</li>
		</ol>
	</nav>
	{# title #}
	<h1>Tous les articles {{ brand }}</h1>
	{# administrator part #}
	{% if is_granted('ROLE_ADMIN') %}
		<div class="container my-5">
			<div class="row">
				{# add button #}
				<div>
					<a href="{{ path('article_new') }}">
						<button class="add-button" title="Ajouter">
							<i data-fa-symbol="add" class="fas fa-plus"></i>
							<svg class="icon-md">
								<use xlink:href="#add"></use>
							</svg>
						</button>
					</a>
				</div>
			</div>
		</div>
	{% endif %}
	{# product list #}
	<div class="container">
		<div class="row">
			{% for article in articles %}
				{% if article.photo is empty %}
					{% set photo ='https://via.placeholder.com/150x200' %}
				{% else %}
					{% set photo = article.photo %}
				{% endif %}
				<div class="col-6">
					<div class="media mt-2">
						<img src="{{ photo }}" class="align-self-start mr-5 img-thumbnail" style="width:250px; height:300px;" alt="...">
						<div class="media-body">
							<h5 class="my-4">{{ article.nom }}</h5>
							{# administrator part #}
							{% if  is_granted('ROLE_ADMIN') %}
								<p class="card-text">
									Référence :
									{{ article.reference }}
									- Stock restant :
									{{ article.stock }}
								</p>
							{% endif %}
							<p class="card-text">
								{{ article.description }}
							</p>
							{# individual part #}
							{% if is_granted('ROLE_PARTICULIER') %}
								<p class="card-text">
									{{ article.prixTtc }}
									€
								</p>
							{% else %}
								<p class="card-text">
									{{ article.prixHt }}
									€ HT
								</p>
							{% endif %}
							{# buttons #}
							<div class="container my-5">
								<div class="row d-flex justify-content-center">
									{# show product button #}
									<div class="col-4">
										<a href="{{ path('article_show', {'slug1': article.typeArt.nom, 'slug2': article.marque.nom, 'id': article.id }) }}">
											<i data-fa-symbol="show" class="fas fa-eye text-secondary"></i>
											<svg class="icon-md">
												<use xlink:href="#show"></use>
											</svg>
										</a>
									</div>
									{# administrator part #}
									{% if is_granted('ROLE_ADMIN') %}
										{# edit button #}
										<div class="mx-2">
											<a href="{{ path('article_edit', {'id': article.id}) }}" title="Modifier">
												<button class="edit-button" title="Modifier">
													<i data-fa-symbol="edit" class="fas fa-pen"></i>
													<svg class="icon-md">
														<use xlink:href="#edit"></use>
													</svg>
												</button>
											</a>
										</div>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				{# empty #}
				<div>
					Aucun article n'est enregistré dans cette liste
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
