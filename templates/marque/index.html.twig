{% extends 'base.html.twig' %}

{% block title %}PROSMobile - Liste des marques
{% endblock %}

{% block body %}
	{# tree #}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-white rounded-0">
			<li class="breadcrumb-item">
				<a href="{{ path('admin_index') }}">
					Dashboard
				</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">
				Gestion des marques
			</li>
		</ol>
	</nav>
	{# title #}
	<h1>Liste des marques</h1>
	{# button #}
	<div
		class="container my-5">
		{# add button #}
		<div>
			<a href="{{ path('marque_new') }}">
				<button class="add-button" title="Ajouter">
					<i data-fa-symbol="add" class="fas fa-plus"></i>
					<svg class="icon-md">
						<use xlink:href="#add"></use>
					</svg>
				</button>
			</a>
		</div>
		{# discount list #}
		<div class="row my-5">
			{% for marque in marques %}
				{% if marque.image is empty %}
					{% set image ='' %}
				{% else %}
					{% set image = marque.image %}
				{% endif %}
				<div class="col">
					<div class="media">
						<img src="{{ image }}" class="align-self-start mr-4 img-product" alt="{{ marque.nom }}">
						<div class="media-body">
							<h5 class="my-3">{{ marque.nom }}</h5>
							{# button #}
							<div
								class="d-flex justify-content-center my-5">
								{# edit button #}
								<div>
									<a href="{{ path('marque_edit', {'id': marque.id}) }}">
										<button class="edit-button" title="Modifier">
											<i data-fa-symbol="edit" class="fas fa-pen"></i>
											<svg class="icon-md">
												<use xlink:href="#edit"></use>
											</svg>
										</button>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				{# empty #}
				<div>
					Aucune marque trouv√©e
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
